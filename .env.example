# OpenAI API Key (for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (for Claude models - alternative to OpenAI)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Tavily API Key (for web search)
TAVILY_API_KEY=your_tavily_api_key_here

# Ghost CMS Configuration
GHOST_URL=https://your-ghost-site.com
GHOST_ADMIN_API_KEY=your_ghost_admin_api_key_here

# LLM Provider: "openai" or "anthropic"
LLM_PROVIDER=openai

# Evaluation (enabled by default)
ENABLE_EVALUATION=true
EXPORT_EVALUATION=true
MIN_QUALITY_SCORE=70

# Observability (enabled by default)
ENABLE_OBSERVABILITY=true
EXPORT_METRICS=true

# Optional: LangSmith for advanced tracing
ENABLE_LANGSMITH=false
LANGSMITH_API_KEY=your_key
LANGSMITH_PROJECT=blog-post-creator
